{
    "name": "ecphp/ecas",
    "description": "CAS library to communicate with ECAS / EU Login",
    "license": "BSD-3-Clause",
    "type": "library",
    "require": {
        "php": ">= 7.1.3",
        "ecphp/cas-lib": "1.1.*"
    },
    "require-dev": {
        "ecphp/php-conventions": "^1",
        "friends-of-phpspec/phpspec-code-coverage": "^4.3.2 || ^6.0.0",
        "infection/infection": "^0.13.6 || ^0.15.3 || ^0.23 || ^0.24",
        "infection/phpspec-adapter": "^0.1.2",
        "monolog/monolog": "^1.0",
        "nyholm/psr7": "^1.2.1",
        "nyholm/psr7-server": "^0.4.1 || ^1.0.0",
        "phpspec/phpspec": "^5.1.2 || ^6.2.1",
        "phpstan/phpstan-strict-rules": "^0.12 || ^1.0",
        "symfony/cache": "^4.4 || ^5",
        "symfony/http-client": "^4.4 || ^5"
    },
    "autoload": {
        "psr-4": {
            "EcPhp\\Ecas\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "phpro/grumphp": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "changelog-unreleased": "auto-changelog -c .auto-changelog -u",
        "changelog-version": "auto-changelog -c .auto-changelog -v",
        "grumphp": "./vendor/bin/grumphp run",
        "phpinsights": "./vendor/bin/phpinsights analyse src/",
        "phpspec": "./vendor/bin/phpspec run"
    }
}
