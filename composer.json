{
    "name": "ecphp/ecas",
    "description": "CAS library to communicate with ECAS / EU Login",
    "license": "BSD-3-Clause",
    "type": "library",
    "require": {
        "php": ">= 7.4",
        "ecphp/cas-lib": "dev-refactor/pass-the-request-to-each-methods"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "ecphp/php-conventions": "^1",
        "friends-of-phpspec/phpspec-code-coverage": "^6",
        "infection/infection": "^0.24",
        "infection/phpspec-adapter": "^0.1.2",
        "nyholm/psr7": "^1",
        "nyholm/psr7-server": "^1",
        "phpspec/phpspec": "^7",
        "phpstan/phpstan-strict-rules": "^0.12",
        "symfony/cache": "^5",
        "symfony/http-client": "^5"
    },
    "autoload": {
        "psr-4": {
            "EcPhp\\Ecas\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "phpro/grumphp": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "changelog-unreleased": "docker-compose run auto_changelog -c .auto-changelog -u",
        "changelog-version": "docker-compose run auto_changelog -c .auto-changelog -v",
        "grumphp": "./vendor/bin/grumphp run",
        "phpinsights": "./vendor/bin/phpinsights analyse src/",
        "phpspec": "./vendor/bin/phpspec run"
    }
}
